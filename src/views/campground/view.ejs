<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/css/stars.css" />

<div class="row mb-5">
  <div class="col-6">
    <div class="card">
      <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
          <% campground.images.map((image, index) => { %>
          <div
            class="carousel-item <%= index === 0 ? 'active' : ''%>""
          >
            <img src="<%= image.url %>" class="d-block w-100" alt="" />
          </div>

          <% }) %>
        </div>
        <% if (campground.images.length > 1) { %>
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#carouselExample"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#carouselExample"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
        <% } %>
      </div>

      <div class="card-body">
        <h1 class="card-title"><%= campground.title %></h1>
        <p class="card-text"><%= campground.description %></p>
      </div>

      <ul class="list-group list-group-flush ">
        <li class="list-group-item text-muted">
          Created by <%= campground.author.username %>
        </li>
        <li class="list-group-item">Location: <%= campground.location %></li>
        <li class="list-group-item">
          Price: $<%= campground.price %> per night
        </li>
      </ul>

      <% if ( currentUser && campground.author.equals(currentUser)) {%>
      <div class="card-body">
        <a
          class="btn btn-primary card-link"
          href="/campgrounds/<%= campground._id %>/edit"
          >Edit</a
        >
        <form
          class="card-link d-inline"
          action="/campgrounds/<%= campground._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger" type="submit">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>

  <div class="col-6">  
    <div id='map' style='width: 400px; height: 300px;'></div>
    <% if (currentUser) { %>
    <h3>Leave a review</h3>
    <form
      action="/campgrounds/<%= campground._id %>/reviews"
      method="POST"
      novalidate
      class="validated-form mb-3"
    >
      <div>
        <div class="rating-container" id="rating-container">
          <!-- Use a hidden input to store the selected rating -->
          <input
            type="hidden"
            id="rating-input"
            name="review[rating]"
            value="0"
          />
          <span class="star" data-value="1">&#9733;</span>
          <span class="star" data-value="2">&#9733;</span>
          <span class="star" data-value="3">&#9733;</span>
          <span class="star" data-value="4">&#9733;</span>
          <span class="star" data-value="5">&#9733;</span>
        </div>
      </div>
      <div>
        <label class="form-label" for="body">Review:</label>
        <textarea
          class="form-control"
          id="body"
          name="review[body]"
          placeholder="Enter your review"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mt-3">
        <button class="btn btn-success" type="submit">Submit</button>
      </div>
    </form>
    <% } %> <% for (let review of campground.reviews) { %>
    <div class="card mb-2">
      <div class="card-body">
        <h5 class="card-subtitle mb-2">By <%= review.author.username %></h5>

        <div class="rating-container-readOnly">
          <% for (let i = 1; i <= 5; i++) { %>
          <span
            class="star-readOnly <%= i <= review.rating ? 'active' : '' %> no-hover"
            >&#9733;</span
          >
          <% } %>
        </div>

        <p class="card-text">Review: <%= review.body %></p>
        <% if ( currentUser && review.author.equals(currentUser)) {%>
        <form
          action="/campgrounds/<%= campground._id  %>/reviews/<%= review._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
        <% } %>
      </div>
    </div>
    <% } %>
  </div>
</div>
<script src="/js/starRating.js"></script>
<script>
  const mapboxToken = '<%- process.env.MAPBOX_TOKEN %>';
  const campground = <%- JSON.stringify(campground) %>;
 
</script>
