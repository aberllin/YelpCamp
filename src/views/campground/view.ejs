<% layout('layouts/boilerplate')%>

<div class="row mb-5">
  <div class="col-6">
    <div class="card">
      <a class="card-link card-body" href="/">Go back</a>
      <img class="card-img-top" src="<%= campground.image %>" height="300px" />
      <div class="card-body">
        <h1 class="card-title"><%= campground.title %></h1>
        <p class="card-text"><%= campground.description %></p>
      </div>

      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          Created by <%= campground.author.username %>
        </li>
        <li class="list-group-item">Location: <%= campground.location %></li>
        <li class="list-group-item">
          Price: $<%= campground.price %> per night
        </li>
      </ul>

      <% if ( currentUser && campground.author.equals(currentUser)) {%>
      <div class="card-body">
        <a class="btn btn-primary card-link" href="edit/<%= campground._id %>"
          >Edit</a
        >
        <form
          class="card-link d-inline"
          action="/campgrounds/<%= campground._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger" type="submit">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>

  <div class="col-6">
    <% if (currentUser) { %>
    <h3>Leave a review</h3>
    <form
      action="/campgrounds/<%= campground._id %>/reviews"
      method="POST"
      novalidate
      class="validated-form"
    >
      <div>
        <label class="form-label" for="review[rating]">Rating:</label>
        <input
          class="form-range"
          type="range"
          id="rating"
          name="review[rating]"
          min="1"
          max="5"
          required
        />
      </div>
      <div>
        <label class="form-label" for="body">Review:</label>
        <textarea
          class="form-control"
          id="body"
          name="review[body]"
          placeholder="Enter your review"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mt-3">
        <button class="btn btn-success" type="submit">Submit</button>
      </div>
    </form>
    <% } %> <% for (let review of campground.reviews) { %>
    <div class="card my-3">
      <div class="card-body">
        <h5 class="card-title">Rating: <%= review.rating %></h5>
        <h6 class="card-subtitle mb-2 text-muted">
          By <%= review.author.username %>
        </h6>
        <p class="card-text">Review: <%= review.body %></p>
        <% if ( currentUser && review.author.equals(currentUser)) {%>
        <form
          action="/campgrounds/<%= campground._id  %>/reviews/<%= review._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
        <% } %>
      </div>
    </div>
    <% } %>
  </div>
</div>
